<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ucd.urbanflow.mapper.EmergencyVehicleMapper">

    <resultMap id="EmergencyVehicleEventResultMap" type="com.ucd.urbanflow.entity.EmergencyVehicleEvent">
        <id property="id" column="id"/>
        <result property="eventId" column="event_id"/>
        <result property="eventType" column="event_type"/>
        <result property="vehicleId" column="vehicle_id"/>
        <result property="vehicleType" column="vehicle_type"/>
        <result property="organization" column="organization"/>
        <result property="triggerTime" column="trigger_time"/>
        <result property="startEdgeId" column="start_edge_id"/>
        <result property="endEdgeId" column="end_edge_id"/>
        <result property="routeEdges" column="route_edges" javaType="java.util.List" jdbcType="VARCHAR" typeHandler="com.ucd.urbanflow.util.JsonStringListTypeHandler"/>
        <result property="junctionsOnPath" column="junctions_on_path" javaType="java.util.List" jdbcType="VARCHAR" typeHandler="com.ucd.urbanflow.util.JsonStringListTypeHandler"/>
        <result property="signalizedJunctions" column="signalized_junctions" javaType="java.util.List" jdbcType="VARCHAR" typeHandler="com.ucd.urbanflow.util.JsonStringListTypeHandler"/>
        <result property="eventStatus" column="event_status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <resultMap id="EmergencyVehicleStaticDataResultMap" type="com.ucd.urbanflow.dto.EmergencyVehicleStaticDataDto">
        <result property="organization" column="organization"/>
        <result property="signalizedJunctions" column="signalized_junctions" javaType="java.util.List" jdbcType="VARCHAR" typeHandler="com.ucd.urbanflow.util.JsonStringListTypeHandler"/>
    </resultMap>

    <select id="findPendingEventsByTriggerTime" resultMap="EmergencyVehicleEventResultMap">
        SELECT * FROM emergency_vehicle_events
        WHERE trigger_time &lt;= #{currentTime}
          AND event_status = 'pending'
        ORDER BY trigger_time ASC
    </select>

    <select id="findByEventId" resultMap="EmergencyVehicleStaticDataResultMap">
        SELECT
            organization,
            signalized_junctions
        FROM emergency_vehicle_events
        WHERE event_id = #{eventId}
    </select>

    <update id="updateEventStatus">
        UPDATE emergency_vehicle_events
        SET event_status = #{status}, updated_at = NOW()
        WHERE event_id = #{eventId}
    </update>
</mapper>
