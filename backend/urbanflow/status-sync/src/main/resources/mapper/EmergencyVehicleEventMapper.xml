<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucd.urbanflow.mapper.EmergencyVehicleEventMapper">

    <resultMap id="EmergencyVehicleEventResultMap" type="com.ucd.urbanflow.model.EmergencyVehicleEvent">
        <id property="id" column="id"/>
        <result property="eventId" column="event_id"/>
        <result property="eventType" column="event_type"/>
        <result property="vehicleId" column="vehicle_id"/>
        <result property="vehicleType" column="vehicle_type"/>
        <result property="organization" column="organization"/>
        <result property="triggerTime" column="trigger_time"/>
        <result property="startEdgeId" column="start_edge_id"/>
        <result property="endEdgeId" column="end_edge_id"/>
        <result property="routeEdges" column="route_edges" javaType="java.util.List" jdbcType="VARCHAR" typeHandler="com.ucd.urbanflow.handler.JsonListTypeHandler"/>
        <result property="signalizedJunctions" column="signalized_junctions" javaType="java.util.List" jdbcType="VARCHAR" typeHandler="com.ucd.urbanflow.handler.JsonListTypeHandler"/>
        <result property="eventStatus" column="event_status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="selectAllEvents" resultMap="EmergencyVehicleEventResultMap">
        SELECT id, event_id, event_type, vehicle_id, vehicle_type, organization, trigger_time,
               start_edge_id, end_edge_id, 
               route_edges,
               signalized_junctions,
               event_status, created_at, updated_at
        FROM emergency_vehicle_events 
        ORDER BY created_at DESC
    </select>

</mapper>
